{
        "compilerOptions": {
            "target": "es5",
            "lib": ["esnext", "dom"],
            "module": "commonjs",
            "declaration": true,
            "outDir": "./lib",
            "skipLibCheck": true,
            "strict": true,
            "resolveJsonModule": true
          },
          "exclude": ["node_modules/", "lib/" ],
          "paths": {
            "@root/*": ["src/*"],
            "@lib/*": ["lib/*"]
          },
          "typedocOptions": {
            "entryPoints": ["src/"],
            "out": "docs"
        }
}